#!/bin/bash
# postinst script for opengeo-suite
#
# see: dh_installdeb(1)

. /usr/share/debconf/confmodule

set -e

# summary of how this script can be called:
#	* <postinst> `configure' <most-recently-configured-version>
#	* <old-postinst> `abort-upgrade' <new version>
#	* <conflictor's-postinst> `abort-remove' `in-favour' <package>
#	  <new-version>
#	* <postinst> `abort-remove'
#	* <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#	  <failed-install-package> <version> `removing'
#	  <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

WEBAPPS=/var/lib/tomcat6/webapps

function unpack_apps() {
	# set file permissions and copy the war files in
	#
	chown tomcat6. /usr/share/opengeo-suite/*.war
	cp /usr/share/opengeo-suite/*.war /var/lib/tomcat6/webapps
}

function tomcat_credential_setup() {
    local username=$1
    local password=$2
    mv /etc/tomcat6/tomcat-users.xml /etc/tomcat6/tomcat-users.xml.old
    
    echo "<?xml version='1.0' encoding='utf-8'?>
    <tomcat-users>
      <role rolename='manager'/>
      <user username='$username' password='$password' roles='manager'/>
    </tomcat-users>" >> /etc/tomcat6/tomcat-users.xml
    chown -R root:tomcat6 /etc/tomcat6/tomcat-users.xml
    chmod 0640 /etc/tomcat6/tomcat-users.xml
}

case "$1" in
    configure)

    invoke-rc.d tomcat6 stop
    
    GXP=$WEBAPPS/geoexplorer
    TMP=/tmp/opengeo-geoexplorer

    # if this is upgrade, perserve old geoexplorer web.xml
    if [ -e $GXP/WEB-INF/web.xml ]; then
      UPGRADE="yes"
      if [ -e $TMP ]; then
        rm -rf $TMP
      fi
      mkdir $TMP
      cp $GXP/WEB-INF/web.xml $TMP
    fi

	unpack_apps

    if [ ! -z "$UPGRADE" ]; then
      cp $TMP/web.xml $GXP/WEB-INF
    fi

    # create a link to opengeo-docs so we can serve them up from tomcat
    DOCS=/usr/share/opengeo-docs
    if [ -e $DOCS ] && [ ! -e $WEBAPPS/opengeo-docs ]; then
      ln -sf $DOCS $WEBAPPS/opengeo-docs
    fi

    # Setup the tomcat manager
    db_get opengeo_suite/username
    if [ "$RET" ]; then
        username="$RET"
    else
      username="manager"
    fi
    db_get opengeo_suite/password_confirm
    password="$RET"
    if [ -z "$password" ]; then
      password="manager"
    fi
    
    tomcat_credential_setup $username $password


    invoke-rc.d tomcat6 restart

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
	echo "postinst called with unknown argument \`$1'" >&2
	exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

db_stop;

exit 0
